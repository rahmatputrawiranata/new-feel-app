<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="@dimen/padding_32"
    tools:context=".screen.AuthActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_8"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/loginButton"
            style="@style/OutlineRoundAccentButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/continue_with_google"
            app:icon="@drawable/ic_google"
            app:iconGravity="textStart"
            app:iconPadding="@dimen/padding_24"
            app:iconSize="@dimen/size_24"
            tools:ignore="RtlSymmetry" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/authProgressBarr"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:lottie_loop="true"
            app:lottie_repeatCount="5"
            app:lottie_rawRes="@raw/loader"/>

    </FrameLayout>
</LinearLayout>
